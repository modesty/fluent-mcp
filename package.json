{
  "name": "@modesty/fluent-mcp",
  "version": "0.1.0",
  "description": "MCP server for Fluent (ServiceNow SDK)",
  "keywords": [
    "Servicenow SDK",
    "Fluent",
    "mcp",
    "MCP Server",
    "sdk",
    "model-context-protocol",
    "DSL",
    "domain specific language MCP"
  ],
  "author": {
    "name": "Modesty Zhang",
    "email": "modestyz@hotmail.com",
    "url": "https://www.google.com/search?q=modesty+zhang+site%3Acodeproject.com"
  },
  "homepage": "https://github.com/modesty/fluent-mcp",
  "repository": {
    "type": "git",
    "url": "git://github.com/modesty/fluent-mcp.git"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "fluent-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "build:dev": "rollup -c rollup.config.mjs --environment NODE_ENV:development",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint 'src/**/*.ts' --config eslint.config.js",
    "lint:fix": "eslint 'src/**/*.ts' --config eslint.config.js --fix",
    "test": "jest",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "inspect:dev": "npx @modelcontextprotocol/inspector ts-node src/index.ts",
    "inspect:published": "npx @modelcontextprotocol/inspector npx @modesty/fluent-mcp"
  },
  "type": "module",
  "engines": {
    "node": ">=20.18.0"
  },
  "devEngines": {
    "packageManager": {
      "name": "npm",
      "version": ">=11.4.1"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "@servicenow/sdk": "4.1.1",
    "zod": "^4.3.5",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "rollup": "^4.55.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "files": [
    "dist",
    "res"
  ]
}